{
  "name": "minser",
  "productName": "Minser",
  "companyName": "Absalom Media",
  "version": "0.0.1",
  "description": "Not your usual file converter app",
  "scripts": {
    "start": "electron app app --js-flags='--expose-gc'",
    "dev": "NODE_ENV='development' electron app --js-flags='--expose-gc' --enable-logging --remote-debugging-port=9222",
    "postinstall": "electron-builder install-app-deps",
    "pack-all": "build --dir -mwl --x64 --ia32",
    "dist-all": "build -mwl --x64 --ia32",
    "pack": "build --dir",
    "dist": "build --x64 --ia32",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "tdd": "mocha --watch test",
    "coverage": "codecov",
    "lint": "./node_modules/.bin/standard",
    "clean": "rm -rf dist",
    "clean:osx": "rm -rf dist/osx",
    "clean:win": "rm -rf dist/win"
  },
  "build": {
    "productName": "Minser",
    "appId": "com.electron.minser",
    "artifactName": "${name}-${arch}.${ext}",
    "copyright": "Â© 2019 Absalom Media",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "Minser",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "nsis-web",
        "7z",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "build/icons/512x512.png",
      "category": "Utility",
      "packageCategory": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach",
      "Audio",
      "fetch",
      "Notification"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absalomedia/minser"
  },
  "bugs": {
    "url": "https:/github.com/absalomedia/minser/issues"
  },
  "homepage": "https:/github.com/absalomedia/minser#readme",
  "keywords": [
    "file",
    "conversion",
    "converter"
  ],
  "author": "Lawrence Meckan <media@absalom.biz>",
  "contributors": [],
  "license": "MIT",
  "dependencies": {
    "@uppy/companion": "^0.17.4",
    "@uppy/core": "^0.30.4",
    "@uppy/drag-drop": "^0.30.4",
    "@uppy/dropbox": "^0.30.4",
    "@uppy/google-drive": "^0.30.4",
    "@uppy/instagram": "^0.30.4",
    "@uppy/tus": "^0.30.4",
    "@uppy/xhr-upload": "^0.30.4",
    "electron-fs-extra": "^1.0.0",
    "electron-log": "^2.2.17",
    "electron-updater": "^2.21.8",
    "fs-extra": "^7.0.1",
    "i18next": "^10.3.0",
    "i18next-node-fs-backend": "^1.0.0",
    "install-peers": "^1.0.2",
    "jquery": "^3.3.1",
    "node-fetch": "^2.1.2",
    "open": "^0.0.5",
    "request": "^2.88.0",
    "shell-path": "^2.1.0",
    "shelljs": "^0.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^8.0.3",
    "babel-plugin-istanbul": "^5.1.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "electron": "^2.0.8",
    "electron-builder": "^19.55.1",
    "electron-is-dev": "^1.0.1",
    "electron-unhandled": "^1.1.0",
    "mocha": "^4.0.1",
    "nyc": "^14.0.0",
    "sinon": "^4.2.0",
    "spectron": "^3.8.0",
    "standard": "^10.0.3"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
